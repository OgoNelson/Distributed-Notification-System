# Development Dockerfile

FROM php:8.2-fpm-alpine

# Set build-time arguments for build-essential packages
ARG BUILD_DEPS="autoconf g++ make musl-dev libc-dev linux-headers"

# Install system dependencies and PHP extensions in one layer
RUN apk add --no-cache \
    ${BUILD_DEPS} \
    freetype-dev \
    libjpeg-turbo-dev \
    libpng-dev \
    libwebp-dev \
    icu-dev \
    libxml2-dev \
    oniguruma-dev \
    zlib-dev \
    bash \
    curl \
    git \
    unzip \
    zip \
    && docker-php-ext-install \
        bcmath \
        intl \
        mbstring \
        pdo_mysql \
        sockets \
        xml \
    && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install gd \
    && apk del ${BUILD_DEPS}

# Install PHP extensions required by Laravel
RUN docker-php-ext-install \
    pdo \
    pdo_mysql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    intl \
    opcache

# Install Composer
COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www

# --- FIX IS HERE ---
# First, copy all your application files
COPY services/user-service ./

# Now, run composer install. It can find the 'artisan' file.
RUN composer install --prefer-dist --no-interaction --no-progress
# --- END FIX ---

EXPOSE 8000

# Start the application
CMD ["php", "artisan", "octane:start", "--watch", "--host=0.0.0.0", "--port=8000"]
